<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="goose.eyephone.MainActivity">

    <!--but do you even speak italics??!??!-->

    <fragment android:name="goose.eyephone.switcher"
        android:id="@+id/switcher"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:fontFamily="sans-serif-thin"
        android:text="Take Picture"
        android:textColor="#000000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="sans-serif-thin"
        android:text="Select Picture"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif-bold-thin"
        android:text="Camera" />

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/cameraButton"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:fontFamily="sans-serif-bold-thin"
        android:text="Select" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/galleryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-bold-thin"
        android:text="Back" />

    <ImageView
        android:id="@+id/eyesOpen"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/backButton"
        android:layout_marginTop="46dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/eyesClosed"
        android:layout_width = "100dp"
        android:layout_height= "250dp"
        android:scaleType="fitXY"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/eyesOpen"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TextCLOSED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textOPEN"
        android:layout_alignBottom="@+id/textOPEN"
        android:layout_alignEnd="@+id/galleryButton"
        android:layout_alignRight="@+id/galleryButton"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:text="Closed" />

    <TextView
        android:id="@+id/textOPEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cameraButton"
        android:layout_alignRight="@+id/cameraButton"
        android:layout_below="@+id/backButton"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="11dp"
        android:text="Open" />

    <Button
        android:id="@+id/readyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/backButton"
        android:layout_alignRight="@+id/backButton"
        android:layout_below="@+id/eyesOpen"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="14dp"
        android:text="Ready?" />

    <TextView
        android:id="@+id/setupText"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/textOPEN"
        android:layout_alignStart="@+id/textOPEN"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="Initialize"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        android:textStyle="italic" />
</RelativeLayout>
